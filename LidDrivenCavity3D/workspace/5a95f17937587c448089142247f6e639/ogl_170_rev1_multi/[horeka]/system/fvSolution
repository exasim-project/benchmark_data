FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}

solvers
{
	p
	{
		solver GKOCG;
		preconditioner none;
		tolerance 0.0001;
		relTol 0;
		maxIter 6000;
		forceHostBuffer 0;
		verbose 1;
		matrixFormat Ell;
		regenerate 1;
		executor cuda;
	}

	pFinal
	{
		$p;
		relTol 0;
	}

	U
	{
		solver PBiCGStab;
		preconditioner DILU;
		tolerance 0;
		relTol 0;
		maxIter 5;
	}

}

PISO
{
	nCorrectors 2;
	nNonOrthogonalCorrectors 0;
	pRefCell 0;
	pRefValue 0;
}

